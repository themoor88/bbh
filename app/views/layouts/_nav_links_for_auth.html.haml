  = link_to 'All Campaigns', campaigns_path, class: 'navbar-brand'
  = link_to 'My Favorites', favorites_path, class: 'navbar-brand'
  = link_to 'My Profile', edit_user_registration_path, class: 'navbar-brand'
  = link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'navbar-brand'
- elsif user_signed_in? && current_user.role == :tech_seeker
  = link_to 'My Campaigns', campaigns_path, class: 'navbar-brand'
  = link_to 'My Favorites', favorites_path, class: 'navbar-brand'
  = link_to 'My Profile', edit_user_registration_path, class: 'navbar-brand'
  = link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'navbar-brand'
